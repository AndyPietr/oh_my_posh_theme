{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "version": 2,
    "final_space": true,
    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "type": "path",
                    "style": "plain",
                    "powerline_symbol": "\ue0b0",
                    "foreground": "#32f3a9",
                    "template": " {{ .Path }} ",
                    "properties": {
                        "mixed_threshold":15,
                        "style": "mixed"
                    }
                },
                {
                    "type": "git",
                    "style": "plain",
                    "powerline_symbol": " in \ue0b0",
                    "foreground": "#ff9248",
                    "background_templates": [
                        "{{ if gt .Ahead 0 }}red{{ end }}",
                        "{{ if gt .Behind 0 }}#ff9248{{ end }}"
                    ],
                    "template": "{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }}{{ .Working.String }}{{ end }}{{ if and (.Staging.Changed) (.Working.Changed) }} \u2502{{ end }}{{ if .Staging.Changed }}{{ .Staging.String }}{{ end }} ",
                    "properties": {
                        "azure_devops_icon": "\ufd03 ",
                        "bitbucket_icon": "\uf171 ",
                        "branch_ahead_icon": "\u2191",
                        "branch_behind_icon": "\u2193",
                        "branch_gone": "\u2262",
                        "branch_icon": "\ue0a0 ",
                        "branch_identical_icon": "\u2261",
                        "cherry_pick_icon": "âœ“ ",
                        "commit_icon": "\u25b7 ",
                        "fetch_stash_count": false,
                        "fetch_status": true,
                        "fetch_upstream_icon": true,
                        "git_icon": "\ue5fb ",
                        "github_icon": "\uf408 ",
                        "gitlab_icon": "\uf296  ",
                        "merge_icon": "\u25f4 ",
                        "no_commits_icon": "[no commits]",
                        "rebase_icon": "\u2c62 ",
                        "tag_icon": "\u25b6 "
                    }
                },
                {
                    "type": "exit",
                    "style": "plain",
                    "powerline_symbol": "\ue0b0",
                    "foreground": "#ffffff",
                    "background": "red",
                    "template": "on{{ if gt .Code 0 }}error{{ else }}\uf42e{{ end }} "
                }
            ],
            "newline": true
        },
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "type": "text",
                    "style": "plain",
                    "foreground": "#757575"
                },
                {
                    "type": "text",
                    "style": "plain",
                    "foreground": "#ffffff"
                }
            ],
            "newline": true
        }
    ],
    "osc99": true
}